<?xml version="1.0" encoding="utf-8"?>


<ScrollView android:layout_width="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content">
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content">

		<TextView android:id="@+id/gclient_label"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginBottom="10px"
			android:text="Fill in form, then select GET TOKEN, and then GET CONTACTS." />

		<TextView android:id="@+id/gclient_email_label"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginBottom="10px" android:text="Google Email Address:" />
		<EditText android:id="@+id/gclient_email"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginBottom="10px" />

		<TextView android:id="@+id/gclient_password_label"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginBottom="10px" android:text="Google Password:" />
		<EditText android:id="@+id/gclient_password"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginBottom="10px" android:password="true" />

		<Button android:id="@+id/gclientgettoken_button"
			android:layout_width="150dp" android:layout_height="wrap_content"
			android:text="GET TOKEN" />

		<Button android:id="@+id/gclientcleartoken_button"
			android:layout_width="150dp" android:layout_height="wrap_content"
			android:text="CLEAR TOKEN" />

		<Button android:id="@+id/gclientgetcontacts_button"
			android:layout_width="150dp" android:layout_height="wrap_content"
			android:text="GET CONTACTS" />

		<TextView android:id="@+id/gclient_token_label"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginBottom="10px" android:text="Token:" />
		<TextView android:id="@+id/gclient_token"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginBottom="10px" android:textSize="10sp" />

		<TextView android:id="@+id/gclient_output_label"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginBottom="10px" android:text="Contacts:" />
		<!--
			a ListView inside a ScrollView is really not recommended (ScrollView
			already scrolls, and ListView resizes to scroll for screen) - but it
			works for this example
		-->
		<ListView android:id="@+id/contactslistview"
			android:layout_width="fill_parent" android:layout_height="300dp"
			android:layout_weight="1" android:drawSelectorOnTop="false" />

		<TextView android:id="@+id/empty" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:text="Contact list is empty" />

	</LinearLayout>
</ScrollView>